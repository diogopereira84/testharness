        // Update first name error message if less than 2 chars
        $dom.get('#firstname-error', function() {
            $("#firstname-error").bind("DOMSubtreeModified", updateErrorMessageFirstName);
            updateErrorMessageFirstName(); // Update on initialization
        });

        // Update last name error message if less than 2 chars
        $dom.get('#lastname-error', function() {
            $("#lastname-error").bind("DOMSubtreeModified", updateErrorMessageLastName);
            updateErrorMessageLastName(); // Update on initialization
        });
        
        // Update first name error message if less than 2 chars
        function updateErrorMessageFirstName() {
            let $error = $("#firstname-error:contains(Please enter more or equal than 2 symbols.)");
            $error.text('First Name must have at least 2 characters.');
        }
        
        // Update last name error message if less than 2 chars
        function updateErrorMessageLastName() {
            let $error = $("#lastname-error:contains(Please enter more or equal than 2 symbols.)");
            $error.text('Last Name must have at least 2 characters.');
        }
    });
</script>
