    $helper = $this->helper('Fedex\Orderhistory\Helper\Data');
    $moduleenabled = $helper->isEnhancementEnabledForPrint() ? $helper->isEnhancementEnabledForPrint() : '0';
    $isRetailOrderHistory = $helper->isRetailOrderHistoryEnabled() ? $helper->isRetailOrderHistoryEnabled() : '0';
?>
<script>
    require(
        [
            'jquery'
        ],
        function($) {
            $(function() {
                if (<?= $moduleenabled; ?> || <?= $isRetailOrderHistory; ?>) {
                    setTimeout(function() {
                    window.print();
                }, 5000); /* B-1148619- Print Quote Receipt */
                } else {
                    window.print();
                }
            });
        }
    );
</script>

