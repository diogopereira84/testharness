<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.nav.panel" remove="true" />
        <referenceBlock name="quick.search" remove="true" />
        <referenceBlock name="quick.sde.search" remove="true" />
        <referenceContainer name="header.container">
            <referenceBlock name="minicart" remove="true"/>
        </referenceContainer>
        <referenceContainer name="head.additional">
                <block class="Fedex\Delivery\Block\Script" name="googlemaps.api" template="Fedex_Delivery::script.phtml"/>
        </referenceContainer>
        <referenceContainer name="header.panel.wrapper" remove="true" />
        <referenceContainer name="content">
                <block class="Magento\Framework\View\Element\Template" name="retail.checkout.header" template="Magento_Checkout::checkout_header.phtml" before='-'/>
            </referenceContainer>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="customer-email" xsi:type="array">
                                                            <item name="componentDisabled" xsi:type="boolean">true</item>
                                                        </item>
                                                        <item name="shipping-address-fieldset" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                             <item name="company" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">50</item>
                                                                </item>
                                                               <item name="country_id" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">60</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="additionalClasses" xsi:type="string">address-field</item>
                                                                    </item>
                                                                </item>
                                                                 <item name="street" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">70</item>
                                                                </item>
                                                                <item name="city" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">80</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="additionalClasses" xsi:type="string">address-field city-field-validation</item>
                                                                    </item>
                                                                </item>
                                                                <item name="region_id" xsi:type="array">
                                                                   <item name="config" xsi:type="array">
                                                                        <item name="additionalClasses" xsi:type="string">address-field</item>
                                                                    </item>
                                                                </item>
                                                                <item name="region" xsi:type="array">
                                                                   <item name="sortOrder" xsi:type="string">90</item>
                                                                </item>
                                                                <item name="postcode" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">100</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="additionalClasses" xsi:type="string">address-field</item>
                                                                    </item>
                                                                </item>
                                                                <item name="telephone" xsi:type="array">
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="tooltip" xsi:type="boolean">false</item>
                                                                    </item>
                                                                    <item name="validation" xsi:type="array">
                                                                        <item name="phoneUS" xsi:type="boolean">true</item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                    </item>
                                    <item name="sidebar" xsi:type="array">
                                        <item name="children" xsi:type="array">
                                            <item name="summary" xsi:type="array">
                                                <item name="children" xsi:type="array">
                                                    <item name="totals" xsi:type="array">
                                                        <item name="sortOrder" xsi:type="string">100</item>
                                                        <item name="children" xsi:type="array">
                                                            <item name="subtotal" xsi:type="array">
                                                                <item name="config" xsi:type="array">
                                                                    <item name="title" xsi:type="string" translate="true">Subtotal</item>
                                                                </item>
                                                            </item>
                                                            <item name="fedex-discount" xsi:type="array">
                                                                <item name="component"  xsi:type="string">Fedex_Pay/js/view/checkout/cart/totals/fedexDiscount</item>
                                                                <item name="sortOrder" xsi:type="string">50</item>
                                                                <item name="config" xsi:type="array">
                                                                    <item name="template" xsi:type="string">Fedex_Pay/checkout/cart/totals/fedexDiscount</item>
                                                                    <item name="title" xsi:type="string" translate="true">Total Discount</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                    <item name="cart_items" xsi:type="array">
                                                        <item name="sortOrder" xsi:type="string">0</item>
                                                    </item>
                                                </item>
                                            </item>
                                             <item name="shipping-information" xsi:type="array">
                                                  <item name="componentDisabled" xsi:type="boolean">true</item>
                                                <item name="config" xsi:type="array">
                                                </item>
                                                <item name="displayArea" xsi:type="string">shipping-information</item>
                                                <item name="children" xsi:type="array">
                                                    <item name="ship-to" xsi:type="array">
                                                       <item name="componentDisabled" xsi:type="boolean">true</item>
                                                        <item name="displayArea" xsi:type="string">ship-to</item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </body>
    </page>
