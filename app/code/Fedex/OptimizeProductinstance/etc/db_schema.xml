<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="temp_quote_compression" resource="default" engine="innodb" comment="Quote Compression">
		<column xsi:type="int" name="id" padding="10" identity="true" unsigned="true" nullable="false" comment="Id"/>
		<column xsi:type="int" name="quote_id" padding="10" unsigned="true" nullable="false" comment="Quote Id"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" identity="false"
                default="0" comment="Quote Status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
	</table>
    <table name="temp_order_compression" resource="default" engine="innodb" comment="Order Compression">
		<column xsi:type="int" name="id" padding="10" identity="true" unsigned="true" nullable="false" comment="Id"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false" comment="Order Id"/>
		<column xsi:type="smallint" name="status" unsigned="true" nullable="false" identity="false"
                default="0" comment="Order Status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
	</table>
</schema>
