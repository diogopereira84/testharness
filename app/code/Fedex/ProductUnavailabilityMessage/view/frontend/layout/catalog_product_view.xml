<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.fileupload">
            <arguments>
                <argument name="product_availability_view_model"
                          xsi:type="object">Fedex\ProductUnavailabilityMessage\ViewModel\CheckProductAvailability
                </argument>
            </arguments>
            <block class="Magento\Catalog\Block\Product\View" name="pdp.unavailable.message"
                   template="Fedex_ProductUnavailabilityMessage::product/view/unavailablemessage.phtml">
                <arguments>
                    <argument name="products_availability_view_model"
                              xsi:type="object">Fedex\ProductUnavailabilityMessage\ViewModel\CheckProductAvailability
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
