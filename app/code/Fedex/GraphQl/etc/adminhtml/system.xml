<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="oauth">
            <group id="access_token_lifetime">
                <field id="fuse_integration" translate="label comment" type="text" sortOrder="90" showInDefault="1" canRestore="1">
                    <label>Fuse Integration Token Lifetime (hours)</label>
                    <comment>We will disable this feature if the value is empty.</comment>
                    <validate>required-entry validate-zero-or-greater validate-number</validate>
                </field>
            </group>
        </section>

        <section id="environment_toggle_configuration">
            <group id="environment_toggle">
                <field id="d235836_error_logs" translate="label" type="select" sortOrder="1000" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Tiger Team - D-235836 Enable Logging for Unserialize Syntax Errors</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
