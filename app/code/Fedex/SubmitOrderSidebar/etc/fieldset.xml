<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="sales_convert_quote">
            <field name="grand_total">
                <aspect name="to_order" />
            </field>
            <field name="base_grand_total">
                <aspect name="to_order" targetField="base_grand_total" />
            </field>
            <field name="customer_group_id">
                <aspect name="to_order" targetField="customer_group_id" />
            </field>
            <field name="volume_discount">
                <aspect name="to_order" targetField="volume_discount" />
            </field>
            <field name="bundle_discount">
                <aspect name="to_order" targetField="bundle_discount" />
            </field>
            <field name="promo_discount">
                <aspect name="to_order" targetField="promo_discount" />
            </field>
            <field name="account_discount">
                <aspect name="to_order" targetField="account_discount" />
            </field>
            <field name="shipping_discount">
                <aspect name="to_order" targetField="shipping_discount" />
            </field>
        </fieldset>
    </scope>
</config>
