<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

    <widget id="product_bundle_recommendation"
            class="Fedex\PageBuilderBlocks\Block\ProductBundleRecommendation">

        <label translate="true">Product Bundle Recommendation</label>
        <description translate="true">Displays recommended product bundles using SKUs</description>

        <parameters>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="default_template" value="product-bundle-recommendation-block.phtml" selected="true">
                        <label translate="true">Product Bundle Recommendation Template</label>
                    </option>
                </options>
            </parameter>
            <parameter name="title" xsi:type="text">
                <label translate="true">Title</label>
            </parameter>
            <parameter name="sku" xsi:type="text">
                <label translate="true">Product SKU</label>
            </parameter>
            <parameter name="message" xsi:type="text">
                <label translate="true">Message</label>
            </parameter>
            <parameter name="cta_label" xsi:type="text">
                <label translate="true">CTA Label</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
