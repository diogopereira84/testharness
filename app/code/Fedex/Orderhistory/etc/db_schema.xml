<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <!-- B-1193998 | RT-ECVS- Product detail on Order Receipt and Estimated Delivery Time in case of pickup should be displayed -->
    <table name="quote" resource="checkout" engine="innodb" comment="Sales Flat Quote">
        <column xsi:type="varchar" name="estimated_pickup_time" nullable="true" length="255" comment="Estimated Pickup Time" />
    </table>
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Flat Order">
        <column xsi:type="varchar" name="estimated_pickup_time" nullable="true" length="255" comment="Estimated Pickup Time" />
    </table>
</schema>
