<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="slide"
          label="Slide"
          component="Magento_PageBuilder/js/content-type"
          preview_component="Magento_PageBuilder/js/content-type/slide/preview"
          form="pagebuilder_slide_form"
          menu_section="media"
          icon="icon-pagebuilder-slider"
          translate="label">
        <appearances>
            <appearance name="collage-left"
                        preview_template="Magento_PageBuilder/content-type/slide/collage-left/preview"
                        master_template="Fedex_PageBuilderHeroBanner/content-type/slide/collage-left/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>
                    <element name="link">
                        <attribute name="data-analytics" source="data-analytics"/>
                    </element>
                    <element name="messagelaptop">
                        <html name="messagelaptop" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="messagetablet">
                        <html name="messagetablet" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="messagemobile">
                        <html name="messagemobile" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                </elements>
                <converters>
                    <converter name="background_type" component="Fedex_PageBuilderHeroBanner/js/mass-converter/background-type">
                        <config>
                            <item name="attribute_name" value="background_type"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="desktop_medium_image_variable" value="desktop_medium_image"/>
                            <item name="mobile_medium_image_variable" value="mobile_medium_image"/>
                        </config>
                    </converter>
                    <converter name="background_images" component="Fedex_PageBuilderHeroBanner/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="desktop_medium_image_variable" value="desktop_medium_image"/>
                            <item name="mobile_medium_image_variable" value="mobile_medium_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
            <appearance name="collage-centered"
                        preview_template="Magento_PageBuilder/content-type/slide/collage-centered/preview"
                        master_template="Fedex_PageBuilderHeroBanner/content-type/slide/collage-centered/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>
                    <element name="link">
                        <attribute name="data-analytics" source="data-analytics"/>
                    </element>
                    <element name="messagelaptop">
                        <html name="messagelaptop" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="messagetablet">
                        <html name="messagetablet" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="messagemobile">
                        <html name="messagemobile" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                </elements>
                <converters>
                    <converter name="background_type" component="Fedex_PageBuilderHeroBanner/js/mass-converter/background-type">
                        <config>
                            <item name="attribute_name" value="background_type"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="desktop_medium_image_variable" value="desktop_medium_image"/>
                            <item name="mobile_medium_image_variable" value="mobile_medium_image"/>
                        </config>
                    </converter>
                    <converter name="background_images" component="Fedex_PageBuilderHeroBanner/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
