<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="company" resource="default" engine="innodb" comment="Company Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Company ID"/>
        <column xsi:type="smallint" name="status" padding="5" unsigned="true" nullable="false" identity="false"
                default="0" comment="Status"/>
        <column xsi:type="varchar" name="company_name" nullable="true" length="40" comment="Company Name"/>
        <column xsi:type="varchar" name="legal_name" nullable="true" length="80" comment="Legal Name"/>
        <column xsi:type="varchar" name="company_email" nullable="true" length="255" comment="Company Email"/>
        <column xsi:type="varchar" name="vat_tax_id" nullable="true" length="40" comment="VAT Tax ID"/>
        <column xsi:type="varchar" name="reseller_id" nullable="true" length="40" comment="Reseller ID"/>
        <column xsi:type="text" name="comment" nullable="true" comment="Comment"/>
        <column xsi:type="varchar" name="street" nullable="true" length="40" comment="Street"/>
        <column xsi:type="varchar" name="city" nullable="true" length="40" comment="City"/>
        <column xsi:type="varchar" name="country_id" nullable="true" length="2" comment="Country ID"/>
        <column xsi:type="varchar" name="region" nullable="true" length="40" comment="Region"/>
        <column xsi:type="int" name="region_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Region Id"/>
        <column xsi:type="varchar" name="postcode" nullable="true" length="30" comment="Postcode"/>
        <column xsi:type="varchar" name="telephone" nullable="true" length="20" comment="Telephone"/>
        <column xsi:type="int" name="customer_group_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Customer Group ID"/>
        <column xsi:type="int" name="sales_representative_id" padding="10" unsigned="true" nullable="true"
                identity="false" comment="Sales Representative ID"/>
        <column xsi:type="int" name="super_user_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Super User ID"/>
        <column xsi:type="int" name="shared_catalog_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Shared Catalog ID"/>
        <column xsi:type="text" name="reject_reason" nullable="true" comment="Reject Reason"/>
        <column xsi:type="timestamp" name="rejected_at" on_update="false" nullable="true" comment="Rejected At"/>
        <!--
            Added Epro & company URL
            @Author: Pratibha Verma 03 AUG 2020
        -->
        <column xsi:type="boolean" name="is_epro_enabled" nullable="false" default="0" comment="Is Epro enabled"/>
        <column xsi:type="varchar" name="domain_name" length="30" nullable="true" comment="Company Domain Name"/>
        <column xsi:type="varchar" name="network_id" length="30" nullable="true" comment="Company Network ID"/>
        <column xsi:type="varchar" name="company_url" nullable="true" length="255" comment="Company URL"/>
        <column xsi:type="varchar" name="acceptance_option" nullable="true" length="30" comment="Acceptance Attribute Type"/>
        <column xsi:type="boolean" name="is_delivery" nullable="false" comment="Delivery Options"/>
        <column xsi:type="boolean" name="is_pickup" nullable="false" comment="Store Pickup"/>
        <column xsi:type="boolean" name="hc_toggle" nullable="false" comment="Hotel and Convention Toggle"/>
        <column xsi:type="varchar" name="site_name" nullable="true" length="255" comment="Website Code"/>
        <column xsi:type="text" name="allowed_delivery_options" nullable="false" comment="Allowed Delivery Options"/>
        <!--
        Added Recommended Location Settings
        @Author: Anuj Kumar 18 Oct 2021
        -->
        <column xsi:type="boolean" name="allow_production_location" nullable="false" comment="Allow Site Member"/>
        <column xsi:type="varchar" name="production_location_option" nullable="true" length="255" comment="Production Location Option"/>
        <!--
            Added Recipient Address from Purchase Order
            @Author: Atul Kumar 11 AUG 2021
        -->
        <column xsi:type="boolean" name="recipient_address_from_po" default="1" nullable="false" comment="Recipient Address from Purchase Order" />
        <!--
            Added Epro Email Message Setup
            @Author: Vivek singh 21 SEPT 2020
        -->
        <column xsi:type="boolean" name="is_quote_request" nullable="false" comment="Quote Request(Bid Request)"/>
        <column xsi:type="boolean" name="is_expiring_order" nullable="false" comment="Expiring Order Email"/>
        <column xsi:type="boolean" name="is_expired_order" nullable="false" comment="Expired Order Email"/>
        <column xsi:type="boolean" name="is_order_reject" nullable="false" comment="Order Rejection Email"/>
        <column xsi:type="boolean" name="is_success_email_enable" nullable="false" default="1" comment="Order Confirmation Email"/>
        <column xsi:type="varchar" name="bcc_comma_seperated_email" nullable="true" length="255" comment="Comma Seperated Email"/>
        <column xsi:type="varchar" name="order_confirmation_email_template" default="0" length="20" comment="Order Confirmation Email Template"/>
        <column xsi:type="boolean" name="allow_own_document" nullable="false" comment="Allow Users to Upload ,Create ,Order their Own Documents"/>
        <column xsi:type="boolean" name="allow_shared_catalog" nullable="false" comment="Allow Users to Order Documents from their Shared Catalog"/>
        <column xsi:type="boolean" name="allow_upload_and_print" nullable="false" comment="Allow Upload and Print" default="1"/>
        <!--E-445046 | used for allow non standard catalog on company level -->
        <column xsi:type="boolean" name="allow_non_standard_catalog" nullable="false" comment="Allow Non Standard Catalog" default="1"/>
        <!--E-390932 | used for non-standard catalog distribution list on company level -->
        <column xsi:type="varchar" name="non_standard_catalog_distribution_list" nullable="true" length="255" comment="Emails Within This List Will Receive Non-standard Catalog Set-up Requests For The Site"/>
        <!--E-369071 | used for upload to quote feature on company level -->
        <column xsi:type="boolean" name="allow_upload_to_quote" nullable="false" comment="Allow Upload to Quote for specific company"/>
        <!--B-1826488 | The display of the quote confirmation page with Next Steps turned OFF -->
        <column xsi:type="boolean" name="allow_next_step_content" nullable="false" comment="Allow next step content to show and hide"/>
        <!-- B-1792780 | used for saving next step content in editor -->
        <column xsi:type="text" name="upload_to_quote_next_step_content" nullable="true" comment="content of next step for specific company"/>
        <column xsi:type="varchar" name="payment_option" nullable="true" length="30" comment="Payment Method Type"/>
        <column xsi:type="varchar" name="fedex_account_number" nullable="true" length="30" comment="Fedex Account Number"/>
        <column xsi:type="varchar" name="shipping_account_number" nullable="true" length="30" comment="Shipping Account Number"/>
        <column xsi:type="varchar" name="discount_account_number" nullable="true" length="30" comment="Discount Account Number"/>
        <column xsi:type="boolean" name="order_complete_confirm" nullable="false" comment="Order Completion Confirmation"/>
        <column xsi:type="boolean" name="shipnotf_delivery" nullable="false" comment="Shipping Notification / Delivery Options"/>
        <column xsi:type="boolean" name="order_cancel_customer" nullable="false" comment="Order Cancellation(by Customer)"/>
        <!-- E-350600 | Commercial - Custom Billing Fields -->
        <column xsi:type="boolean" name="fxo_account_number_editable" default="0" nullable="false"  comment="Fxo Account Number Editable"/>
        <column xsi:type="boolean" name="shipping_account_number_editable" default="0" nullable="false" comment="Shipping Account Number Editable"/>
        <column xsi:type="boolean" name="discount_account_number_editable" default="0" nullable="false" comment="Discount Account Number Editable"/>
        <!-- B-1145880 | Added to show Upload only section on home page -->
        <column xsi:type="boolean" name="enable_upload_section" default="0" nullable="false" comment="Enable Upload Only"/>
        <column xsi:type="boolean" name="enable_catalog_section" default="0" nullable="false" comment="Enable Catalog Only"/>
        <column xsi:type="text" name="company_logo" nullable="false" comment="company logo meta data"/>
        <column xsi:type="varchar" name="company_url_extention" nullable="false"  length="255"  comment="company logo settings"/>
        <column xsi:type="boolean" name="is_sensitive_data_enabled" nullable="false" default="false" comment="Sensitive Data Enabled"/>
        <!-- B-1563891 | Added for checking Armada Login Commercial Storefront -->
        <column xsi:type="varchar" name="storefront_login_method_option" nullable="true" length="250" comment="Discount Account Number"/>
        <column xsi:type="text" name="self_reg_data" nullable="true" comment="SelfRegData"/>
        <column xsi:type="varchar" name="sso_login_url" nullable="true" length="250" comment="SSO Login URL"/>
        <column xsi:type="varchar" name="sso_logout_url" nullable="true" length="250" comment="SSO Logout URL"/>
        <column xsi:type="varchar" name="sso_idp" nullable="true" length="250" comment="SSO IDP"/>
        <column xsi:type="varchar" name="sso_group" nullable="true" length="250" comment="SSO Group"/>
        <column xsi:type="boolean" name="is_catalog_mvp_enabled" default="0" nullable="false" comment="Catalog MVP"/>
        <column xsi:type="boolean" name="is_epro_u2b_enabled"
        default="0" nullable="false" comment="Return To Epro" disabled="true"/>
        <column xsi:type="boolean" name="is_epro_u2q_enabled"
        default="0" nullable="false" comment="Return To Epro company setting"/>
        <column xsi:type="boolean" name="is_promo_discount_enabled" nullable="false" default="false" comment="Promo Discount Enabled"  disabled="true"/>
        <column xsi:type="boolean" name="is_account_discount_enabled" nullable="false" default="false" comment="FXO Account Discount Enabled"  disabled="true"/>
        <column xsi:type="text" name="custom_billing_invoiced" nullable="true" comment="Custom Billing Invoiced"/>
        <column xsi:type="text" name="custom_billing_credit_card" nullable="true" comment="Custom Billing Credit Card"/>
        <column xsi:type="text" name="custom_billing_shipping" nullable="true" comment="Custom Billing Shipping"/>
        <column xsi:type="boolean" name="office_supplies_enabled" nullable="false" default="0" comment="Office Supplies Enabled"/>
        <column xsi:type="boolean" name="shipping_packing_mailing_enabled" nullable="false" default="0" comment="Shipping, Packing and Mailing Supplies Enabled"/>
        <!-- E-359853 | Toggle Restructuring for Cloud Drive Integration -->
        <column xsi:type="boolean" name="box_enabled" nullable="false" default="0" comment="Box Cloud Drive Integration Option"/>
        <column xsi:type="boolean" name="dropbox_enabled" nullable="false" default="0" comment="Dropbox Cloud Drive Integration Option"/>
        <column xsi:type="boolean" name="google_enabled" nullable="false" default="0" comment="Google Cloud Drive Integration Option"/>
        <column xsi:type="boolean" name="microsoft_enabled" nullable="false" default="0" comment="Microsoft Cloud Drive Integration Option"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="COMPANY_COUNTRY_ID_DIRECTORY_COUNTRY_COUNTRY_ID" table="company"
                    column="country_id" referenceTable="directory_country" referenceColumn="country_id"
                    onDelete="SET NULL"/>
        <constraint xsi:type="foreign" referenceId="COMPANY_REGION_ID_DIRECTORY_COUNTRY_REGION_REGION_ID" table="company"
                    column="region_id" referenceTable="directory_country_region" referenceColumn="region_id"
                    onDelete="SET NULL"/>
        <constraint xsi:type="foreign" referenceId="COMPANY_CUSTOMER_GROUP_ID_CUSTOMER_GROUP_CUSTOMER_GROUP_ID" table="company"
                    column="customer_group_id" referenceTable="customer_group" referenceColumn="customer_group_id"
                    onDelete="SET NULL"/>
        <constraint xsi:type="foreign" referenceId="COMPANY_SALES_REPRESENTATIVE_ID_ADMIN_USER_USER_ID" table="company"
                    column="sales_representative_id" referenceTable="admin_user" referenceColumn="user_id"
                    onDelete="SET NULL"/>
        <index referenceId="COMPANY_COMPANY_NAME_LEGAL_NAME" indexType="fulltext">
            <column name="company_name"/>
            <column name="legal_name"/>
        </index>
        <index referenceId="COMPANY_COUNTRY_ID" indexType="btree">
            <column name="country_id"/>
        </index>
        <index referenceId="COMPANY_URL_EXTENSION_INDEX_ID" indexType="btree">
            <column name="company_url_extention"/>
        </index>
        <index referenceId="COMPANY_REGION_ID" indexType="btree">
            <column name="region_id"/>
        </index>
        <index referenceId="COMPANY_SSO_IDP" indexType="btree">
            <column name="sso_idp"/>
        </index>

    </table>
    <table name="company_team" resource="default" engine="innodb" comment="Team Table">
        <column xsi:type="int" name="team_id" padding="11" unsigned="false" nullable="false" identity="true"
                comment="Company ID"/>
        <column xsi:type="varchar" name="name" nullable="true" length="40" comment="Name"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="team_id"/>
        </constraint>
    </table>
    <table name="company_structure" resource="default" engine="innodb" comment="Structure Table">
        <column xsi:type="int" name="structure_id" padding="11" unsigned="false" nullable="false" identity="true"
                comment="Structure ID"/>
        <column xsi:type="int" name="parent_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Parent Structure ID"/>
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="smallint" name="entity_type" padding="5" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity type"/>
        <column xsi:type="varchar" name="path" nullable="false" length="255" comment="Tree Path"/>
        <column xsi:type="int" name="position" padding="11" unsigned="false" nullable="false" identity="false"
                comment="Position"/>
        <column xsi:type="int" name="level" padding="11" unsigned="false" nullable="false" identity="false" default="0"
                comment="Tree Level"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="structure_id"/>
        </constraint>
        <index referenceId="COMPANY_STRUCTURE_PARENT_ID" indexType="btree">
            <column name="parent_id"/>
        </index>
        <index referenceId="COMPANY_STRUCTURE_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
        <index referenceId="COMPANY_STRUCTURE_ENTITY_TYPE" indexType="btree">
            <column name="entity_type"/>
        </index>
    </table>
    <table name="company_advanced_customer_entity" resource="default" engine="innodb"
           comment="company_advanced_customer_entity">
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Customer ID"/>
        <column xsi:type="int" name="company_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Company ID"/>
        <column xsi:type="text" name="job_title" nullable="true" comment="Job Title"/>
        <column xsi:type="smallint" name="status" padding="5" unsigned="true" nullable="false" identity="false"
                default="1" comment="Status"/>
        <column xsi:type="varchar" name="telephone" nullable="true" length="255" comment="Phone Number"/>
        <constraint xsi:type="foreign" referenceId="COMPANY_ADVANCED_CSTR_ENTT_CSTR_ID_CSTR_ENTT_ENTT_ID"
                    table="company_advanced_customer_entity" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="COMPANY_ADVANCED_CUSTOMER_ENTITY_CUSTOMER_ID">
            <column name="customer_id"/>
        </constraint>
        <index referenceId="COMPANY_ADVANCED_CUSTOMER_ENTITY_STATUS" indexType="btree">
            <column name="status"/>
        </index>
    </table>
    <table name="company_roles" resource="default" engine="innodb" comment="Roles Table">
        <column xsi:type="int" name="role_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Primary Role ID"/>
        <column xsi:type="int" name="sort_order" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Sorting order"/>
        <column xsi:type="varchar" name="role_name" nullable="true" length="40" comment="Company role name"/>
        <column xsi:type="int" name="company_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Company ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="role_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="COMPANY_ROLES_COMPANY_ID_COMPANY_ENTITY_ID" table="company_roles"
                    column="company_id" referenceTable="company" referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="COMPANY_ROLES_COMPANY_ID" indexType="btree">
            <column name="company_id"/>
        </index>
    </table>
    <table name="company_user_roles" resource="default" engine="innodb" comment="User Roles Table">
        <column xsi:type="int" name="user_role_id" padding="11" unsigned="false" nullable="false" identity="true"
                comment="Primary User Role ID"/>
        <column xsi:type="int" name="role_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Role ID"/>
        <column xsi:type="int" name="user_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="User ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="user_role_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="COMPANY_USER_ROLES_ROLE_ID_COMPANY_ROLES_ROLE_ID"
                    table="company_user_roles" column="role_id" referenceTable="company_roles" referenceColumn="role_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="COMPANY_USER_ROLES_USER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="company_user_roles" column="user_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="COMPANY_USER_ROLES_ROLE_ID" indexType="btree">
            <column name="role_id"/>
        </index>
        <index referenceId="COMPANY_USER_ROLES_USER_ID" indexType="btree">
            <column name="user_id"/>
        </index>
    </table>
    <table name="company_permissions" resource="default" engine="innodb" comment="Permissions Table">
        <column xsi:type="int" name="permission_id" padding="11" unsigned="false" nullable="false" identity="true"
                comment="Primary Permission ID"/>
        <column xsi:type="int" name="role_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Role ID"/>
        <column xsi:type="varchar" name="resource_id" nullable="true" length="80" comment="Resource ID"/>
        <column xsi:type="varchar" name="permission" nullable="true" length="80" comment="Permission"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="permission_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="COMPANY_PERMISSIONS_ROLE_ID_COMPANY_ROLES_ROLE_ID"
                    table="company_permissions" column="role_id" referenceTable="company_roles"
                    referenceColumn="role_id" onDelete="CASCADE"/>
        <index referenceId="COMPANY_PERMISSIONS_ROLE_ID" indexType="btree">
            <column name="role_id"/>
        </index>
    </table>
    <table name="company_order_entity" resource="sales" engine="innodb" comment="company_order_entity">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Order ID"/>
        <column xsi:type="int" name="company_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Company ID"/>
        <column xsi:type="varchar" name="company_name" nullable="true" length="40" comment="Company Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="COMPANY_ORDER_ENTITY_ORDER_ID_SALES_ORDER_ENTITY_ID"
                    table="company_order_entity" column="order_id" referenceTable="sales_order"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="COMPANY_ORDER_ENTITY_ENTITY_ID">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="COMPANY_ORDER_ENTITY_ORDER_ID">
            <column name="order_id"/>
        </constraint>
    </table>
    <!--
        @Author: PV
        Additional table to manage the company accepting rules for customer lookup
    -->
    <table name="company_auth_rule" resource="default" engine="innodb" comment="Company Rules Table">
        <column xsi:type="int" name="role_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Company Rule ID"/>
        <column xsi:type="varchar" name="rule_code" nullable="true" length="100" comment="Resource ID"/>
        <column xsi:type="int" name="company_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Company ID"/>
        <column xsi:type="varchar" name="type" nullable="true" length="20" comment="Type"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="role_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="COMPANY_AUTH_RULE_ID_COMPANY_ENTITY_ID"
                    table="company_auth_rule" column="company_id" referenceTable="company" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
    </table>
    <!-- New table for company additional data -->
    <table name="company_additional_data" resource="default" engine="innodb" comment="Company Additional Data">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Company ID"/>
        <column xsi:type="int" name="company_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Company ID"/>
        <column xsi:type="int" name="store_id" padding="10" unsigned="true" nullable="true" identity="false" comment="Store Id"/>
        <column xsi:type="int" name="store_view_id" padding="10" unsigned="true" nullable="true" identity="false" comment="Store View Id"/>

        <!-- new added start -->
        <column xsi:type="int" name="new_store_id" padding="10" unsigned="true" nullable="true" identity="false" comment="New Store Id"/>
        <column xsi:type="int" name="new_store_view_id" padding="10" unsigned="true" nullable="true" identity="false" comment="New Store View Id"/>
        <!-- new added end -->

        <column xsi:type="varchar" name="cc_token" nullable="true" length="255" comment="Credit Card Token"/>
        <column xsi:type="text" name="cc_data" nullable="true" comment="Credit Data"/>
        <!-- B-1359540 : For Credit card configured in Magento Admin , expiration date should be validated -->
        <column xsi:type="datetime" name="cc_token_expiry_date_time" nullable="true" comment="Credit Card Token Expiry Date"/>
        <column xsi:type="varchar" name="company_payment_options" nullable="true" length="200" comment="Payment Method Type"/>
        <column xsi:type="varchar" name="creditcard_options" nullable="true" length="100" comment="Credit Card Options"/>
        <column xsi:type="varchar" name="fedex_account_options" nullable="true" length="100" comment="FedEx Account Options"/>
        <column xsi:type="varchar" name="default_payment_method" nullable="true" length="100" comment="Default Payment Method"/>
        <!-- B-1654939: RT- ECVS- Create +Add Promo' and '+Add FedEx Office Account for Discount' toggle at Company level -->
        <column xsi:type="boolean" name="is_promo_discount_enabled" nullable="false" default="false" comment="Promo Discount Enabled"/>
        <column xsi:type="boolean" name="is_account_discount_enabled" nullable="false" default="false" comment="FXO Account Discount Enabled"/>
        <!-- Order Notes to be send to OMS job ticket -->
        <column xsi:type="mediumtext" name="order_notes" nullable="true" comment="Order Notes for OMS ticket"/>
        <column xsi:type="boolean" name="terms_and_conditions" nullable="false" default="false" comment="Terms and Conditions"/>
        <!-- B-1640409 RT-ECVS- Toggle creation for Reorder at Company level -->
        <column xsi:type="boolean" name="is_reorder_enabled" nullable="false" default="true" comment="Reorder Enable"/>

        <!-- Notification Banner Company Level Configuration Coloums Start -->
        <column xsi:type="boolean" name="is_banner_enable" nullable="false" default="false" comment="Notificaiton Banner Enabled"/>
        <column xsi:type="varchar" name="banner_title" nullable="true" length="255" comment="Notification Banner Title"/>
        <column xsi:type="varchar" name="iconography" nullable="true" length="100" comment="Notification Banner Iconography"/>
