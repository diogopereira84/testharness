<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
  <argument name="data" xsi:type="array">
    <item name="js_config" xsi:type="array">
      <item name="provider" xsi:type="string">change_admin_grid.change_admin_grid_data_source</item>
      <item name="deps" xsi:type="string">change_admin_grid.change_admin_grid_data_source</item>
    </item>
    <item name="spinner" xsi:type="string">change_admin_columns</item>
  </argument>
  <dataSource name="change_admin_grid_data_source">
    <argument name="dataProvider" xsi:type="configurableObject">
      <argument name="class" xsi:type="string">Fedex\Company\Model\Company\ListingDataProvider</argument>
      <argument name="name" xsi:type="string">change_admin_grid_data_source</argument>
      <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
      <argument name="requestFieldName" xsi:type="string">entity_id</argument>
      <argument name="data" xsi:type="array">
        <item name="config" xsi:type="array">
          <item name="update_url" xsi:type="url" path="mui/index/render" />
          <item name="storageConfig" xsi:type="array">
            <item name="indexField" xsi:type="string">entity_id</item>
          </item>
        </item>
      </argument>
    </argument>
    <argument name="data" xsi:type="array">
      <item name="js_config" xsi:type="array">
        <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
      </item>
    </argument>
  </dataSource>
  <listingToolbar name="listing_top">
    <filterSearch name="fulltext"/>
    <paging name="listing_paging"/>
  </listingToolbar>
  <columns name="change_admin_columns">
    <column name="name">
      <settings>
        <label translate="true">Name</label>
        <fieldClass>
          <class name="long-text-field">true</class>
        </fieldClass>
      </settings>
    </column>
    <column name="secondary_email">
      <settings>
        <label translate="true">Email</label>
        <fieldClass>
          <class name="long-text-field">true</class>
        </fieldClass>
      </settings>
    </column>
    <column name="external_user_id">
      <settings>
          <label translate="true">User ID</label>
          <fieldClass>
              <class name="long-text-field">true</class>
          </fieldClass>
      </settings>
    </column>
    <column name="customer_role" component="Magento_Ui/js/grid/columns/select">
      <settings>
        <options class="Fedex\Company\Model\Customer\Source\CustomerRole"/>
        <dataType>select</dataType>
        <label translate="true">Role</label>
        <filter>false</filter>
      </settings>
    </column>
    <column name="status" component="Magento_Ui/js/grid/columns/select">
      <settings>
        <options class="Magento\Company\Model\Customer\Source\Status"/>
        <dataType>select</dataType>
        <label translate="true">Status</label>
        <filter>false</filter>
      </settings>
    </column>
    <actionsColumn name="actions" class="Fedex\Company\Ui\Component\Listing\Column\ChangeAdminActions" component="Fedex_Company/js/companyusers/grid/columns/actions">
      <settings>
        <fieldClass>
          <class name="col actions">true</class>
        </fieldClass>
        <label>Actions</label>
        <resizeEnabled>false</resizeEnabled>
        <resizeDefaultWidth>150</resizeDefaultWidth>
        <indexField>entity_id</indexField>
      </settings>
    </actionsColumn>
  </columns>
</listing>
