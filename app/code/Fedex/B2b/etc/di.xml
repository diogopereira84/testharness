<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
   <preference for="Magento\Quote\Model\Quote\Address" type="Fedex\B2b\Model\Quote\Address" />
   <preference for="Magento\Quote\Model\Quote\TotalsCollector" type="Fedex\B2b\Model\Quote\TotalsCollector" />
   <preference for="Magento\NegotiableQuote\Model\NegotiableQuoteManagement" type="Fedex\B2b\Model\NegotiableQuoteManagement" />
    <type name="Magento\Quote\Model\Quote\Address">
		<plugin sortOrder="1" name="fedex_quote_b2b_address"
		type="Fedex\B2b\Plugin\Model\Quote\Address"/>
	</type>
   <type name="Magento\Catalog\Model\ResourceModel\Product\Indexer\Price\BatchSizeCalculator">
        <arguments>
            <argument name="batchRowsCount" xsi:type="array">
                <item name="default" xsi:type="number">1000</item>
            </argument>
            <argument name="estimators" xsi:type="array">
                <item name="default" xsi:type="object">Magento\Catalog\Model\Indexer\Price\BatchSizeManagement</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\Indexer\Category\Product\Action\Full">
        <arguments>
            <argument name="batchRowsCount" xsi:type="number">40000</argument>
            <argument name="batchSizeManagement" xsi:type="object">Magento\Catalog\Model\Indexer\CategoryProductBatchSize</argument>
        </arguments>
    </type>
   <type name="Magento\Catalog\Model\ResourceModel\Product\Indexer\Eav\BatchSizeCalculator">
        <arguments>
            <argument name="batchSizes" xsi:type="array">
                <item name="decimal" xsi:type="number">500</item>
                <item name="source" xsi:type="number">500</item>
            </argument>
            <argument name="batchSizeManagers" xsi:type="array">
                <item name="decimal" xsi:type="object">Magento\Catalog\Model\ResourceModel\Product\Indexer\Eav\DecimalBatchSizeManagement</item>
                <item name="source" xsi:type="object">Magento\Catalog\Model\ResourceModel\Product\Indexer\Eav\SourceBatchSizeManagement</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\CatalogInventory\Model\Indexer\Stock\Action\Full">
        <arguments>
            <argument name="batchRowsCount" xsi:type="array">
                <item name="default" xsi:type="number">100</item>
            </argument>
            <argument name="batchSizeManagement" xsi:type="object">Magento\CatalogInventory\Model\Indexer\Stock\BatchSizeManagement</argument>
        </arguments>
    </type>
    <type name="Magento\NegotiableQuote\Controller\Adminhtml\Quote\View">
      <plugin name="negotiable_quote_view" type="Fedex\B2b\Plugin\Controller\Adminhtml\Quote\View" sortOrder="1" disabled="false" />
    </type>
     <type name="Magento\NegotiableQuote\Controller\Adminhtml\Quote\UpdateOnOpen">
        <plugin name="fedex_quote_updateonopen_plugin" type="Fedex\B2b\Plugin\Controller\Adminhtml\Quote\UpdateOnOpenExecutePlugin" disabled="false"/>
    </type>
</config>
