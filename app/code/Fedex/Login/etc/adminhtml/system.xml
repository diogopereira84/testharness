                <field id="verification_email_expiry_duration" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Verification email expires in </label>
                </field>
                <field id="verification_from_email" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Verification Email From</label>
                </field>
                <field id="verification_email_subject" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Verification Email Subject</label>
                </field>
                <field id="inactive_user_error_message" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Inactive User Error Message</label>
                </field>
                <field id="inactive_user_landingpage_link" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Inactive User Landing Page Link</label>
                </field>
            </group>
        </section>
    </system>
</config>