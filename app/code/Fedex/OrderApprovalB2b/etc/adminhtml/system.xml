                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="fedex" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Settings</label>
            <tab>fedex_configurations</tab>
            <group id="b2b_order_approval_config" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="1" showInStore="1">
