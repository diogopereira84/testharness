<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="checkout" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceContainer name="page.top">
			<block class="Magento\Framework\View\Element\Template" name="express.checkout" template="Fedex_ExpressCheckout::expressCheckout.phtml">
				<arguments>
					<argument name="express-checkout-view-model" xsi:type="object">Fedex\ExpressCheckout\ViewModel\ExpressCheckout</argument>
					<argument name="ssoConfiguration" xsi:type="object">Fedex\SSO\ViewModel\SsoConfiguration</argument>
				</arguments>
			</block>
		</referenceContainer>
		<referenceContainer name="content">
			<block class="Magento\Framework\View\Element\Template" name="fcl.populate.address" template="Fedex_ExpressCheckout::fclPopulateAddress.phtml">
				<arguments>
					<argument name="express-checkout-view-model" xsi:type="object">Fedex\ExpressCheckout\ViewModel\ExpressCheckout</argument>
				</arguments>
			</block>
		</referenceContainer>
	</body>
</page>
