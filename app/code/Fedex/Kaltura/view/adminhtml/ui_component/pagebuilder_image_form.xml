<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <fieldset name="kaltura_fieldset" sortOrder="35" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Kaltura</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="wid" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Widget ID</label>
                <notice translate="true">wid (enter value without quotes from the embed script)</notice>
            </settings>
        </field>
        <field name="entryid" sortOrder="20" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Entry ID</label>
                <notice translate="true">entry_id (enter value without quotes from the embed script)</notice>
            </settings>
        </field>
    </fieldset>
</form>
