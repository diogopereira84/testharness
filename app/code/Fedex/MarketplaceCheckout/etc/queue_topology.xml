<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/topology.xsd">
    <exchange name="update.receipt" type="topic" connection="amqp">
        <binding id="sendFujitsuReceiptConfirmationEmail" topic="sendFujitsuReceiptConfirmationEmail"
                 destinationType="queue" destination="sendFujitsuReceiptConfirmationEmail"/>
    </exchange>
    <exchange name="marketplace.order.create" type="topic" connection="amqp">
        <binding id="sendOrderToMiraklQueue" topic="sendOrderToMiraklQueue"
                 destinationType="queue" destination="sendOrderToMiraklQueue"/>
    </exchange>
</config>
