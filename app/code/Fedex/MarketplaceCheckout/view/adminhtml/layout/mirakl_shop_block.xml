<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.shop.grid.container">
            <referenceBlock name="shop.grid">
                <referenceBlock name="shop.grid.columnSet">
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="action">
                        <arguments>
                            <argument name="type" xsi:type="string">action</argument>
                            <argument name="header" xsi:type="string" translate="true">Action</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="index" xsi:type="string">id</argument>
                            <argument name="align" xsi:type="string">center</argument>
                            <argument name="renderer" xsi:type="string">
                                Mirakl\Core\Block\Adminhtml\Widget\Grid\Column\Renderer\Action
                            </argument>
                            <argument name="actions" xsi:type="array">
                                <item name="view" xsi:type="array">
                                    <item name="caption" xsi:type="string" translate="true">Edit</item>
                                    <item name="url" xsi:type="array">
                                        <item name="base" xsi:type="string">fedex_marketplacecheckout/shop/edit</item>
                                    </item>
                                    <item name="field" xsi:type="string">id</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                </referenceBlock>
            </referenceBlock>
        </referenceBlock>
    </body>
</page>