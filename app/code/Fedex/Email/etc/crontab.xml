<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">

<group id="quote_expire_notification_cron">
    <job name="expiredquote" instance="Fedex\Email\Cron\Cronjob" method="expiredQuoteNotification">
        <schedule>0 0 * * *</schedule>
    </job>
    <job name="expiringquote" instance="Fedex\Email\Cron\Cronjob" method="quoteExpiringNotification">
        <schedule>0 0 * * *</schedule>
    </job>
</group>

</config>
