<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_notification_log">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" comment="Id" identity="true"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer Id "/>
        <column xsi:type="int" name="quote_id" padding="10" nullable="false" unsigned="true" comment="Quote Id"/>
        <column xsi:type="varchar" name="type" nullable="false" comment="Type"/>
        <column xsi:type="boolean" name="status" comment="Status" nullable="false" />
        <column xsi:type="timestamp" name="sent_date" on_update="true"  nullable="true" comment="sent date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
   </table>
</schema>
