<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/consumer.xsd">
    <consumer name="readyForPickupEmailQueue" queue="readyForPickupEmailQueue" connection="amqp"
              handler="Fedex\Shipment\Model\Subscriber::processMessage"/>
    <consumer name="updateOrderInformation" queue="updateOrderInformation" connection="amqp"
              handler="Fedex\Shipment\Model\UpdateOrderInformation::processOrderUpdateInformation"/>
    <consumer name="sendOrderEmailQueue" queue="sendOrderEmailQueue" connection="amqp"
              handler="Fedex\Shipment\Model\SendOrderEmailQueue::execute"/>
    <consumer name="retryShipmentCreation" queue="retryShipmentCreation" connection="amqp"
              handler="Fedex\Shipment\Model\RetryShipmentCreationListener::retryShipmentCreation"/>
</config>
