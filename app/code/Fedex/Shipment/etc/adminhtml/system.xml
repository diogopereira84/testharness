<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="oms_email_configuration" translate="label" sortOrder="1001" showInDefault="1" showInWebsite="0" showInStore="0">
            <class>separator-top</class>
            <label>OMS Email Configuration</label>
            <tab>fedex_configurations</tab>
            <resource>Fedex_Shipment::oms_shipment_config</resource>
            <group id="config" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="email_id" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Enter Email ID</label>
                    <comment>Please enter Email ID to get new status order details.</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="email_template" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                    <comment>Email template is chosen based on theme fallback when "Default" option is selected.</comment>
                </field>
            </group>
        </section>
        <section id="fedex">
            <group id="general" translate="label" type="text"  showInDefault="1" showInWebsite="0" showInStore="0">
                <field id="product_hierarchy_json_url" translate="label" type="text" sortOrder="550" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Product Hierarchy JSON Url</label>
                </field>
            </group>
        </section>
        <section id="environment_toggle_configuration" translate="label" sortOrder="1001" showInDefault="1" showInWebsite="0" showInStore="0">
            <group id="environment_toggle" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <field id="tiger_d215213_duplicate_order_confirmation_emails" translate="label" type="select" sortOrder="480" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>TIGER - D-215213 - Duplicate Order Confirmation Emails</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="tiger_d219497_magento_unable_to_cancel_3p_order" translate="label" type="select" sortOrder="480" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>TIGER - D-219497 - Magento-Unable to cancel 3p order due to status updates api is failing</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
