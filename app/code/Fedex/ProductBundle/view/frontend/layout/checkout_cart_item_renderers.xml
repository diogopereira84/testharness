<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_item_price_renderers"/>
    <body>
        <referenceBlock name="checkout.cart.item.renderers">
            <block class="Magento\Bundle\Block\Checkout\Cart\Item\Renderer" name="checkout.cart.item.renderers.bundle" as="bundle" template="Fedex_ProductBundle::cart/item/bundle.phtml">
                <block class="Magento\Framework\View\Element\Template" name="checkout.cart.item.renderers.bundle.warning"
                       as="bundle_instructions_warning"
                       template="Fedex_ProductBundle::cart/order/bundle-instructions-warning.phtml">
                    <arguments>
                        <argument name="bundleProductHandler" xsi:type="object">Fedex\ProductBundle\ViewModel\BundleProductHandler</argument>
                    </arguments>
                </block>
                <arguments>
                    <argument name="productEngineUrl_view_model" xsi:type="object">Fedex\ProductEngine\ViewModel\Data</argument>
                    <argument name="productInfoHandler" xsi:type="object">Fedex\Cart\ViewModel\ProductInfoHandler</argument>
                    <argument name="toggleConfig" xsi:type="object">Fedex\EnvironmentManager\ViewModel\ToggleConfig</argument>
                    <argument name="expiredItemViewModal" xsi:type="object">Fedex\ExpiredItems\ViewModel\ExpiryMessages</argument>
                    <argument name="marketplace_view_model" xsi:type="object">Fedex\MarketplaceCheckout\ViewModel\Cart</argument>
                    <argument name="viewModelForWarningMessage" xsi:type="object">Fedex\Cart\ViewModel\CheckoutConfig</argument>
                    <argument name="uploadToQuoteViewModal" xsi:type="object">Fedex\UploadToQuote\ViewModel\UploadToQuoteViewModel</argument>
                    <argument name="product_availability_view_model" xsi:type="object">Fedex\ProductUnavailabilityMessage\ViewModel\CheckProductAvailability</argument>
                    <argument name="item_renderer_provider" xsi:type="object">Fedex\ProductBundle\ViewModel\ItemRendererProvider</argument>
                    <argument name="bundleProductHandler" xsi:type="object">Fedex\ProductBundle\ViewModel\BundleProductHandler</argument>
                </arguments>
                <block class="Magento\Checkout\Block\Cart\Item\Renderer\Actions" name="checkout.cart.item.renderers.bundle.actions" as="actions">
                    <block class="Magento\Checkout\Block\Cart\Item\Renderer\Actions\Edit" name="checkout.cart.item.renderers.bundle.actions.edit" template="Magento_Checkout::cart/item/renderer/actions/edit.phtml">
                        <arguments>
                            <argument name="tazTokenHelper" xsi:type="object">Fedex\Punchout\ViewModel\TazToken</argument>
                            <argument name="productInfoHandler" xsi:type="object">Fedex\Cart\ViewModel\ProductInfoHandler</argument>
                            <argument name="expiredItemViewModal" xsi:type="object">Fedex\ExpiredItems\ViewModel\ExpiryMessages</argument>
                            <argument name="uploadToQuoteViewModal" xsi:type="object">Fedex\UploadToQuote\ViewModel\UploadToQuoteViewModel</argument>
                            <argument name="marketplacePunchout" xsi:type="object">Fedex\MarketplacePunchout\ViewModel\Login</argument>
                            <argument name="product_availability_view_model" xsi:type="object">Fedex\ProductUnavailabilityMessage\ViewModel\CheckProductAvailability</argument>
                            <argument name="dyesub_view_model" xsi:type="object">Fedex\CustomerCanvas\ViewModel\CanvasParams</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Checkout\Block\Cart\Item\Renderer\Actions\Remove" name="checkout.cart.item.renderers.bundle.actions.remove" template="Magento_Checkout::cart/item/renderer/actions/remove.phtml"/>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
