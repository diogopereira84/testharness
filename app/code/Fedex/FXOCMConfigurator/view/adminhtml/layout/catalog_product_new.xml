<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="fxo_cm_sdk" template="Fedex_FXOCMConfigurator::sdk.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Fedex\FXOCMConfigurator\ViewModel\FXOCMHelper</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="catalog-product-popup">
            <arguments>
				<argument name="fxo_cm_view_model" xsi:type="object">Fedex\FXOCMConfigurator\ViewModel\FXOCMHelper</argument>
                <argument name="bundleProductHandlerViewModel" xsi:type="object">Fedex\ProductBundle\ViewModel\BundleProductHandler</argument>
			</arguments>
        </referenceBlock>
    </body>
</page>
