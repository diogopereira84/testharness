<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="fedex">
            <group id="workspace_project_setting" translate="label" type="text" sortOrder="1001" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>WorkSpace Project Settings</label>
                <field id="delete_project_days_no" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Number of Days</label>
                    <comment>Project will be delete via cron, after added days</comment>
                </field>
                <field id="delete_project_cron_time" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Project Delete Cron Time</label>
                </field>
            </group>
            <group id="fxo_cm_content" translate="label" type="text" sortOrder="1001" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>FXOCM Content</label>
                <field id="footer_content" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Footer Content Display in FXOCM in redirect mode</label>
                </field>
                <field id="fxocm_footer_text" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>FXOCM Footer Text</label>
                    <comment>Please add comma seperated values</comment>
                </field>
                <field id="fxocm_footer_link" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>FXOCM Footer Link</label>
                     <comment>Please add comma seperated values</comment>
                </field>
                <field id="convert_to_size_modal_text" type="textarea" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Convert To Size Modal Text</label>
                </field>
                <field id="workspace_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Workspace URL</label>
                </field>
            </group>
            <group id="catalog_ellipsis_control" translate="label" type="text" sortOrder="1001" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Catalog Product Name Ellipsis Control</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Middle Ellipsis Function</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="total_characters" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="text">
                    <label>Total Character Length Ellipsis Trigger</label>
                    <comment>This option indicates the minimum total number of characters to trigger the ellipsis display.</comment>
                    <validate>required-entry validate-digits</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
                <field id="start_characters" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30" translate="label" type="text">
                    <label>Start Character Position Ellipsis Display</label>
                    <comment>This option indicates the character position where the ellipsis will start.</comment>
                    <validate>required-entry validate-digits</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
                <field id="end_characters" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="40" translate="label" type="text">
                    <label>End Characters After Ellipsis Display</label>
                    <comment>This option indicates the end number of characters to display of the Product Name.</comment>
                    <validate>required-entry validate-digits</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
            <group id="general" translate="label" type="text"  showInDefault="1" showInWebsite="0" showInStore="0">
                <field id="print_ready_api_url" translate="label" type="text" sortOrder="600" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Print Ready API Url</label>
                </field>
            </group>
        </section>
        <section id="allprintproducts">
            <group id="general" translate="label" type="text" sortOrder="1001" showInDefault="1" showInWebsite="0" showInStore="0">
                <field id="retail_print_product_url" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Retail Url</label>
                </field>
                <field id="commercial_print_product_url" type="text" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Commercial Url</label>
                </field>
            </group>
        </section>
    </system>
</config>
