<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column" />
    <!-- Remove page-main class and replace it with page-main-full-width to remove page gutters -->
    <referenceContainer name="main.content" htmlTag="main" htmlClass="page-main-full-width" />
    <move element="breadcrumbs" destination="main.content" before="-"/>
    <referenceContainer name="content-container">
        <referenceBlock name="page.main.title" remove="true" />
        <referenceBlock name="catalog.leftnav" remove="true" />
        <referenceBlock name="category.products" remove="true" />
    </referenceContainer>
    <referenceContainer name="columns.top-container">
        <referenceBlock name="category.image" remove="true" />
        <referenceBlock name="category.description" remove="true" />
        <referenceBlock name="category.cms" remove="true" />
    </referenceContainer>
</layout>
	
