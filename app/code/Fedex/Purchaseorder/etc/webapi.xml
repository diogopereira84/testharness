<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="GET" url="/V1/purchaseorder/purchaseOrderxml">
		<service class="Fedex\Purchaseorder\Api\PoInterface" method="getPoxml"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
	<route method="POST" url="/V1/orders/:orderId/status">
		<service class="Fedex\Purchaseorder\Api\OrderUpdateInterface" method="updateOrderStatus"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
</routes>


