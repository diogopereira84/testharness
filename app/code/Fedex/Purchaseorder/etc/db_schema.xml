<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order_item" resource="sales" engine="innodb" comment="Sales Flat Order Item">
		<column xsi:type="mediumtext" name="product_options" nullable="true" comment="Product Options"/>
	</table>
	<table name="quote_item" resource="checkout" engine="innodb" comment="Sales Flat Quote Item">
		<column xsi:type="varchar" name="instance_id" nullable="false" length="255" comment="Instance Id For Filter Item Id"/>
	</table>
</schema>
