<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <stores>
        <default>
            <web>
                <store_discount_configuration>
                    <store_level_promo_display>1</store_level_promo_display>
                    <store_level_account_display>1</store_level_account_display>
                </store_discount_configuration>
                <store_commercial_toggle_configuration>
                    <store_level_reorder_display>1</store_level_reorder_display>
                    <store_level_tc_display>1</store_level_tc_display>
                </store_commercial_toggle_configuration>
            </web>
        </default>
        <ondemand>
            <web>
                <store_discount_configuration>
                    <store_level_promo_display>0</store_level_promo_display>
                    <store_level_account_display>0</store_level_account_display>
                </store_discount_configuration>
                <store_commercial_toggle_configuration>
                    <store_level_reorder_display>0</store_level_reorder_display>
                    <store_level_tc_display>0</store_level_tc_display>
                </store_commercial_toggle_configuration>
            </web>
        </ondemand>
    </stores>
</config>
