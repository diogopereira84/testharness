<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Backend\Controller\Adminhtml\Auth\Login" type="Fedex\OKTA\Controller\Rewrite\Adminhtml\Backend\Auth\Login" />
    <preference for="Magento\Backend\Controller\Adminhtml\Auth\Logout" type="Fedex\OKTA\Controller\Rewrite\Adminhtml\Backend\Auth\Logout" />

    <type name="Magento\User\Model\User">
        <plugin name="fedex_okta_skip_admin_user_identity_check" type="Fedex\OKTA\Plugin\SkipPerformIdentityCheck" sortOrder="1" />
    </type>
    <type name="Magento\Backend\Model\Auth\Session">
        <plugin name="fedex_okta_skip_admin_user_password_reset" type="Fedex\OKTA\Plugin\SkipAdminPasswordReset" sortOrder="1" />
    </type>
    <type name="Magento\User\Block\User\Edit\Tab\Main">
        <plugin name="okta_user_data_user_form_field" type="Fedex\OKTA\Plugin\AdminUserForm"/>
    </type>
</config>
