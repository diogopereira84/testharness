                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="magegeeks_d236791" translate="label" type="select" sortOrder="436" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Mage Geeks - D-236791 - POD COMMERCIAL - Undefined values in SKU modal for Magento created products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
