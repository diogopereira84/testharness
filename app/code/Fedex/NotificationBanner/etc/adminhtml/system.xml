<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="notification_banner_tab" translate="label" sortOrder="10">
            <label>Notification Banner Configuration</label>
        </tab>
        <section id="notification_banner" translate="label" type="text" sortOrder="10" showInDefault="0" showInWebsite="0" showInStore="1">
            <class>separator-top</class>
            <label>Settings</label>
            <tab>notification_banner_tab</tab>
            <resource>Fedex_NotificationBanner::notificationbanner_config</resource>
            <group id="notification_banner_all_flow_group" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="0" showInStore="1">
                <label>Notification Banner Configuration</label>
                <field id="notification_banner_enabled" type="select" translate="label" sortOrder="1" showInDefault="0" showInWebsite="0" showInStore="1" canRestore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable/Disable Notification Banner.</comment>
                </field>
                <field id="banner_title" translate="label" type="text" sortOrder="2" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Banner Title</label>
                    <validate>required-entry</validate>
                </field>
                <field id="notification_iconography" translate="label" type="select" sortOrder="3" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Iconography</label>
                    <source_model>Fedex\NotificationBanner\Block\Adminhtml\System\Config\NotificationOptions</source_model>
                     <validate>validate-select</validate>
                </field>
                <field id="notificaiton_banner_editor" translate="label comment" sortOrder="6" type="editor" showInStore="1" showInWebsite="0" showInDefault="0" canRestore="0">
                    <label>Description</label>
                    <frontend_model>Fedex\NotificationBanner\Block\Adminhtml\System\Config\Editor</frontend_model>
                    <validate>required-entry</validate>
                </field>
                <field id="cta_text" translate="label" type="text" sortOrder="7" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>CTA Text</label>
                </field>
                <field id="cta_link" translate="label" type="text" sortOrder="8" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>CTA Link</label>
                </field>
                <field id="link_open_window" type="select" translate="label" sortOrder="9" showInDefault="0" showInWebsite="0" showInStore="1" canRestore="0">
                    <label>Link Open in New Tab</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
