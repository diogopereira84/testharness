<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
	
	<table name="epro_production_location" resource="default" engine="innodb"
			   comment="ePro Production Lcoation Preference">
		<column xsi:type="int" name="id" unsigned="false" nullable="false" identity="true" comment="ID"/>
		<column xsi:type="varchar" name="location_id" length="255" nullable="false" comment="Location ID"/>
		<column xsi:type="varchar" length="255" name="location_name" nullable="true" comment="Location Name"/>
		<column xsi:type="int" name="company_id" nullable="false" identity="false"  comment="Company ID"/>
		<column xsi:type="text" name="address1"  nullable="true" comment="address1"/>
		<column xsi:type="text" name="address2"  nullable="true" comment="address2"/>
		<column xsi:type="varchar" length="255" name="city"  nullable="true" comment="City"/>
		<column xsi:type="varchar" length="255" name="state"  nullable="true" comment="State"/>
		<column xsi:type="varchar" length="255" name="country_id"  nullable="true" comment="Country ID"/>
		<column xsi:type="int" name="postcode" unsigned="true" nullable="true" identity="false"  comment="Postcode"/>
		<column xsi:type="varchar" length="255" name="address_type"  nullable="true" comment="Address Type"/>
		<column xsi:type="varchar" length="255" name="telephone" nullable="true" comment="Telephone"/>
		<column xsi:type="varchar" length="255" name="location_email" nullable="true" comment="Location Email"/>
		<column xsi:type="varchar" length="255" name="location_type" nullable="true" comment="Location Type"/>
		<column xsi:type="int" name="location_available" unsigned="true" nullable="true" identity="false" comment="Location Available"/>
		<column xsi:type="varchar" length="255" name="availability_reason" nullable="true" comment="Location Type"/>
		<column xsi:type="int" name="is_pickup_enable" unsigned="true" nullable="true" identity="false" comment="Is Pickup Enable"/>		
		<column xsi:type="varchar" length="255" name="lat" nullable="true" comment="latitude"/>
		<column xsi:type="varchar" length="255" name="long"  nullable="true" comment="Longitude"/>
		<column xsi:type="text" name="services"  nullable="true" comment="Services"/>
		<column xsi:type="text" name="hours_of_operation"  nullable="true" comment="Hours of operation"/>
		<column xsi:type="datetime" name="created_at"  nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
		<column xsi:type="datetime" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
		<column xsi:type="boolean" name="is_recommended_store" nullable="false" default="0" comment="Is Recommended Store"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id"/>
		</constraint>
	</table>

	<table name="quote" resource="default" engine="innodb">
		<column xsi:type="smallint" name="failure_email_status" unsigned="false" nullable="false" identity="false" default="0" comment="Failure Email Status"/>
		<column xsi:type="int" name="ext_no" nullable="true" identity="false"  comment="EXT No"/>
	</table>

	<table name="quote_address" resource="default" engine="innodb">
		<column xsi:type="int" name="ext_no" nullable="true" identity="false"  comment="EXT No"/>
		<column xsi:type="boolean" name="is_residence_shipping" nullable="true" default="false" comment="Is Residence Shipping"/>
	</table>
</schema>
